{
    "device_template":[
            {
                "type":"motion_sensor",
                "values":[
                    {
                        "id":"motion_detected"
                    }
                    ]
            },
            {
            "type":"lamp",
            "values":[
                {
                    "id":"signal"
                }
            ]
            } 
    ],

    "automate":
        {
            "peripheriques": 
                {
                "capteurs":{
                    "motion_sensor":[
                        {
                            "nom":"motion_sensor_1",
                            "type":"motion_sensor",
                            "settings":[
                                {
                                    "pin":"1"
                                }
                                ]
                        },
                        {
                            "nom":"motion_sensor_2",
                            "type":"motion_sensor",
                            "settings":[
                                {
                                    "pin":"2"
                                }
                                ]
                        }
                        ]  
                },
                "actionneurs":{
                    "lampes":
                        [
                        {
                            "nom":"lamp_1",
                            "type":"lamp",
                            "settings":[
                                {
                                    "type":"lamp",
                                    "pin":"3"
                                }
                            ]
                        }
                        ]
                },
            "etats": [
                {
                    "if": "{motion_sensor_1.motion_detected} == 0 && {motion_sensor_2.motion_detected} == 0",
                    "then":[
                        {
                            "id":"{lamp_1.signal}",
                            "value":0
                        }
                    ]
                },
                {
                    "if": "{motion_sensor_1.motion_detected} == 1 || {motion_sensor_2.motion_detected} == 1",
                    "then":[
                        {
                            "id":"{lamp_1.signal}",
                            "value":1
                        }
                    ]
                }
            ]
        }
    }  
}